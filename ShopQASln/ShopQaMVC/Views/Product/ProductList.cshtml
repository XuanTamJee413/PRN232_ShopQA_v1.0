@page
@model ShopQaMVC.Views.Product.ProductListModel
<input type="hidden" id="jwtToken" value="@ViewBag.Token" />

<div class="container mt-5">
    <h2 class="mb-4 text-center">Product List</h2>

    <div class="mb-3">
        <a href="/Product/Create" class="btn btn-success">Create New Product</a>
    </div>

    <!-- Filter Form -->
    <form id="searchForm" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-3 mb-3">
                <label for="name" class="form-label">Product Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Search by name" />
            </div>
            <div class="col-md-3 mb-3">
                <label for="category" class="form-label">Category</label>
                <select id="category" name="categoryId" class="form-control">
                    <option value="">-- Select Category --</option>
                </select>
            </div>
            <div class="col-md-2 mb-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </div>
    </form>

    <!-- Product Table -->
    <div class="table-responsive" id="productTable">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <!-- Pagination -->
    <nav>
        <ul class="pagination justify-content-center" id="pagination"></ul>
    </nav>

    <!-- Update Product Modal -->
    <div class="modal fade" id="updateProductModal" tabindex="-1" aria-labelledby="updateProductModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="updateProductForm" enctype="multipart/form-data">
                    <div class="modal-header">
                        <h5 class="modal-title" id="updateProductModalLabel">Update Product</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" id="updateProductId" name="id" />
                        <div class="mb-3">
                            <label for="updateName" class="form-label">Product Name</label>
                            <input type="text" class="form-control" id="updateName" name="name" required />
                        </div>
                        <div class="mb-3">
                            <label for="updateDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="updateDescription" name="description" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="updateCategory" class="form-label">Category</label>
                            <select class="form-control" id="updateCategory" name="categoryId" required></select>
                        </div>
                        <div class="mb-3">
                            <label for="updateBrand" class="form-label">Brand</label>
                            <select class="form-control" id="updateBrand" name="brandId" required></select>
                        </div>
                        <div class="mb-3">
                            <label for="updateImage" class="form-label">Product Image</label>
                            <input type="file" class="form-control" id="updateImage" name="image" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            const pageSize = 5;
            let currentPage = 1;
            const token = $('#jwtToken').val();

            function renderPagination(totalPages) {
                const pagination = $('#pagination');
                pagination.empty();

                for (let i = 1; i <= totalPages; i++) {
                    const li = $('<li>').addClass('page-item').toggleClass('active', i === currentPage);
                    const a = $('<a>').addClass('page-link').attr('href', '#').text(i).click(function (e) {
                        e.preventDefault();
                        currentPage = i;
                        fetchProducts();
                    });
                    li.append(a);
                    pagination.append(li);
                }
            }

            function fetchProducts() {
                const name = $('#name').val();
                const categoryId = $('#category').val();

                $.ajax({
                    url: 'https://localhost:7101/api/Product',
                    type: 'GET',
                    headers: { 'Authorization': 'Bearer ' + token },
                    data: { name, categoryId },
                    success: function (data) {
                        const tableBody = $('#productTable tbody');
                        tableBody.empty();

                        const start = (currentPage - 1) * pageSize;
                        const pagedData = data.slice(start, start + pageSize);

                        if (!pagedData.length) {
                            tableBody.append('<tr><td colspan="5">No products found</td></tr>');
                        } else {
                            $.each(pagedData, function (index, product) {
                                const imageHtml = product.imageUrl ? `<img src="${product.imageUrl}" width="60" />` : '';
                                const row = `<tr>
                                    <td>${imageHtml}</td>
                                    <td><a href="/Product/Detail/${product.id}">${product.name}</a></td>
                                    <td>${product.description}</td>
                                    <td>${product.categoryName}</td>
                                    <td>
                                        <button class="btn btn-warning btn-sm update-btn" data-id="${product.id}">Update</button>
                                        <button class="btn btn-danger btn-sm delete-btn" data-id="${product.id}">Delete</button>
                                    </td>
                                </tr>`;
                                tableBody.append(row);
                            });
                        }
                        renderPagination(Math.ceil(data.length / pageSize));
                    },
                    error: function (xhr) {
                        alert('❌ Error fetching products');
                    }
                });
            }

            function loadCategories(selectId) {
                $.getJSON('https://localhost:7101/odata/Category', function (data) {
                    const select = $(selectId);
                    select.empty().append('<option value="">-- Select Category --</option>');
                    data.value.forEach(c => {
                        select.append(`<option value="${c.Id}">${c.Name}</option>`);
                    });
                    select.show();
                });
            }

            function loadBrands(selectId) {
                $.getJSON('https://localhost:7101/odata/Brand', function (data) {
                    const select = $(selectId);
                    select.empty().append('<option value="">-- Select Brand --</option>');
                    data.value.forEach(b => {
                        select.append(`<option value="${b.Id}">${b.Name}</option>`);
                    });
                    select.show();
                });
            }

            $('#searchForm').submit(function (e) {
                e.preventDefault();
                currentPage = 1;
                fetchProducts();
            });

            $('#productTable').on('click', '.update-btn', function () {
                const id = $(this).data('id');

                $.ajax({
                    url: `https://localhost:7101/api/Product/${id}`,
                    type: 'GET',
                    headers: { 'Authorization': 'Bearer ' + token },
                    success: function (product) {
                        $('#updateProductId').val(product.id);
                        $('#updateName').val(product.name);
                        $('#updateDescription').val(product.description);
                        loadCategories('#updateCategory');
                        loadBrands('#updateBrand');
                        setTimeout(() => {
                            $('#updateCategory').val(product.categoryId);
                            $('#updateBrand').val(product.brandId);
                        }, 500);
                        $('#updateProductModal').modal('show');
                    }
                });
            });

            $('#updateProductForm').submit(function (e) {
                e.preventDefault();
                const formData = new FormData(this);
                const id = $('#updateProductId').val();

                $.ajax({
                    url: `https://localhost:7101/api/Product/${id}`,
                    type: 'PUT',
                    headers: { 'Authorization': 'Bearer ' + token },
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function () {
                        alert('✅ Product updated successfully!');
                        $('#updateProductModal').modal('hide');
                        fetchProducts();
                    },
                    error: function (xhr) {
                        alert('❌ Error updating product: ' + xhr.responseText);
                    }
                });
            });

            $('#productTable').on('click', '.delete-btn', function () {
                const productId = $(this).data('id');
                if (confirm('Are you sure to delete this product?')) {
                    $.ajax({
                        url: `https://localhost:7101/api/Product/${productId}`,
                        type: 'DELETE',
                        headers: { 'Authorization': 'Bearer ' + token },
                        success: function () {
                            alert('Product deleted successfully!');
                            fetchProducts();
                        },
                        error: function () {
                            alert('❌ Error deleting product.');
                        }
                    });
                }
            });

            loadCategories('#category');
            fetchProducts();
        });
    </script>
}
