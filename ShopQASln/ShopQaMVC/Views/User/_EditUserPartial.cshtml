@model ShopQaMVC.Models.EditUserVM

<div class="modal fade" id="editUserModal" tabindex="-1" role="dialog" aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <!-- modal-lg for larger form -->
        <div class="modal-content" style="border-radius:1.5rem; overflow:hidden; min-height:500px;">
            <form asp-action="Edit" method="post">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title font-weight-bold">Edit User</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" style="opacity:1;">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body p-5">
                    <!-- p-5 for more padding -->
                    <input asp-for="Id" type="hidden" id="editId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label asp-for="Username" class="font-weight-bold"></label>
                        <input asp-for="Username" id="editUsername" class="form-control" style="border-radius:1rem; font-size:1.2rem; height:48px;" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="font-weight-bold"></label>
                        <input asp-for="Email" id="editEmail" class="form-control" style="border-radius:1rem; font-size:1.2rem; height:48px;" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Role" class="font-weight-bold mb-1"></label>
                        <div>
                            <select asp-for="Role" id="editRole" class="form-control" style="border-radius:1rem; font-size:1.2rem; height:48px;">
                                <option value="Customer">Customer</option>
                                <option value="Staff">Staff</option>
                                <option value="Admin">Admin</option>
                            </select>
                        </div>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer bg-light" style="border-top:1px solid #eee;">
                    <button type="submit" class="btn btn-primary px-5 py-2" style="border-radius:2rem; font-weight:600; font-size:1.1rem;">Save Changes</button>
                    <button type="button" class="btn btn-secondary px-5 py-2" style="border-radius:2rem; font-weight:600; font-size:1.1rem;" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
