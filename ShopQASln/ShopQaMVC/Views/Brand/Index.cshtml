@model List<ShopQaMVC.Models.BrandVM>

@{
    ViewData["Title"] = "Danh sách Thương hiệu";

   
    var currentSearch = ViewBag.CurrentSearchKeyword as string;
    var currentSort = ViewBag.CurrentSort as string;
    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="mb-3">
    <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-secondary">
        &larr; Quay lại trang chính
    </a>
</div>

<h2>Danh sách Thương hiệu</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" asp-controller="Brand" class="btn btn-success">+ Thêm Thương hiệu</a>

    <form asp-action="Index" method="get" class="d-flex">
       
        <input type="text" name="searchKeyword" class="form-control me-2" placeholder="Tìm theo tên..." value="@currentSearch" />
        <input type="hidden" name="sortBy" value="@currentSort" />
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>
</div>

<table class="table table-bordered table-hover mt-3">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>
                Tên
                <div class="d-inline-block ms-2">
                   
                    <a asp-action="Index" asp-route-searchKeyword="@currentSearch" asp-route-sortBy="name_asc" asp-route-page="1" class="btn btn-sm btn-outline-secondary py-0 px-1">▲</a>
                    <a asp-action="Index" asp-route-searchKeyword="@currentSearch" asp-route-sortBy="name_desc" asp-route-page="1" class="btn btn-sm btn-outline-secondary py-0 px-1">▼</a>
                </div>
            </th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>

                      
                        <form asp-action="Delete" asp-controller="Brand" asp-route-id="@item.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa thương hiệu này không?');">
                                Xóa
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">Không tìm thấy thương hiệu nào.</td>
            </tr>
        }
    </tbody>
</table>


@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-page="@(currentPage - 1)"
                       asp-route-searchKeyword="@currentSearch"
                       asp-route-sortBy="@currentSort">Previous</a>
                </li>
            }

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchKeyword="@currentSearch"
                       asp-route-sortBy="@currentSort">@i</a>
                </li>
            }

            @if (currentPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-page="@(currentPage + 1)"
                       asp-route-searchKeyword="@currentSearch"
                       asp-route-sortBy="@currentSort">Next</a>
                </li>
            }
        </ul>
    </nav>
}