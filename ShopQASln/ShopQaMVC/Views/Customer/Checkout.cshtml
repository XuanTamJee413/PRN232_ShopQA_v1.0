@{
    ViewData["Title"] = "Checkout";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Check Out</h4>
                    <div class="breadcrumb__links">
                        <a href="/Home">Home</a>
                        <a href="/Home/Shop">Shop</a>
                        <span>Check Out</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <form id="checkout-form">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <h6 class="coupon__code">
                            <span class="icon_tag_alt"></span> Have a coupon?
                            <a href="#">Click here to enter your code</a>
                        </h6>
                        <h6 class="checkout__title">Billing Details</h6>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>First Name<span>*</span></p>
                                    <input type="text" name="FirstName" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Last Name<span>*</span></p>
                                    <input type="text" name="LastName" required>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Country<span>*</span></p>
                            <input type="text" name="Country" required>
                        </div>
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input type="text" name="Address" placeholder="Street Address" required class="checkout__input__add">
                            <input type="text" name="Apartment" placeholder="Apartment, suite, unit etc (optional)">
                        </div>
                        <div class="checkout__input">
                            <p>Town/City<span>*</span></p>
                            <input type="text" name="City" required>
                        </div>
                        <div class="checkout__input">
                            <p>Country/State<span>*</span></p>
                            <input type="text" name="State" required>
                        </div>
                        <div class="checkout__input">
                            <p>Postcode / ZIP<span>*</span></p>
                            <input type="text" name="Postcode" required>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone<span>*</span></p>
                                    <input type="text" name="Phone" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="email" name="Email" required>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input__checkbox">
                            <label for="create-acc">
                                Create an account?
                                <input type="checkbox" id="create-acc" name="CreateAccount">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <div class="checkout__input">
                            <p>Account Password</p>
                            <input type="password" name="Password">
                        </div>
                        <div class="checkout__input__checkbox">
                            <label for="diff-note">
                                Note about your order?
                                <input type="checkbox" id="diff-note" name="HasNote">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <div class="checkout__input">
                            <p>Order notes</p>
                            <input type="text" name="OrderNotes" placeholder="Notes about your order, e.g. special notes for delivery.">
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4 class="order__title">Your order</h4>
                            <div class="checkout__order__products">Product <span>Total</span></div>
                            <ul class="checkout__total__products">
                                <li>01. Sample Product <span>350,000 ₫</span></li>
                            </ul>
                            <ul class="checkout__total__all">
                                <li>Subtotal <span>350,000 ₫</span></li>
                                <li>Total <span>350,000 ₫</span></li>
                            </ul>
                            <div class="checkout__input__checkbox">
                                <label for="payment-check">
                                    Check Payment
                                    <input type="radio" name="PaymentMethod" id="payment-check" value="check">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="checkout__input__checkbox">
                                <label for="payment-paypal">
                                    Paypal
                                    <input type="radio" name="PaymentMethod" id="payment-paypal" value="paypal">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <button type="button" class="site-btn" id="placeOrderBtn">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->

<script>
    document.getElementById("placeOrderBtn").addEventListener("click", async function () {
        const firstName = document.querySelector('input[name="FirstName"]').value;
        const lastName = document.querySelector('input[name="LastName"]').value;
        const address = document.querySelector('input[name="Address"]').value;
        const phone = document.querySelector('input[name="Phone"]').value;
        const email = document.querySelector('input[name="Email"]').value;

        if (!firstName || !lastName || !address || !phone || !email) {
            alert("Please fill all required fields!");
            return;
        }

        const orderAmount = 100000; // test 
        const orderInfo = `Thanh toán cho ${firstName} ${lastName} - SDT ${phone}`;

        try {
            const response = await fetch("https://localhost:7101/api/Payment/create-payment", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    amount: orderAmount,
                    orderInfo: orderInfo,
                     orderId: 1
                })
            });

            const data = await response.json();
            if (response.ok && data.paymentUrl) {
                window.location.href = data.paymentUrl;
            } else {
                alert("Thanh toán lỗi: " + (data.message || "Không có paymentUrl trả về"));
            }
        } catch (err) {
            console.error(err);
            alert("Lỗi khi gọi API thanh toán: " + err.message);
        }
    });
</script>
