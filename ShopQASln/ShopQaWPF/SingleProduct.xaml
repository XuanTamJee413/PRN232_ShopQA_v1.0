<Window x:Class="ShopQaWPF.SingleProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết sản phẩm" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="ProductName" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <Image x:Name="ProductImage" Width="250" Height="250" Margin="0,0,20,0"/>

            <StackPanel Width="500">
                <TextBlock x:Name="ProductDescription" TextWrapping="Wrap" Margin="0,0,0,10"/>
                <TextBlock x:Name="ProductBrand" FontStyle="Italic" Margin="0,0,0,5"/>
                <TextBlock x:Name="ProductCategory" FontStyle="Italic" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Màu: " VerticalAlignment="Center"/>
                    <ComboBox x:Name="ColorComboBox" Width="100" Margin="5,0" SelectionChanged="OnVariantSelectionChanged"/>
                    <TextBlock Text="Size: " VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <ComboBox x:Name="SizeComboBox" Width="100" Margin="5,0" SelectionChanged="OnVariantSelectionChanged"/>
                    <TextBlock Text="Số lượng:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="QuantityBox" Width="60" Text="1"/>
                </StackPanel>

                <TextBlock x:Name="VariantPrice" FontWeight="Bold" FontSize="16"/>
                <TextBlock x:Name="VariantStock" FontSize="14" Margin="0,5,0,0"/>
                <Button Content="Thêm vào giỏ hàng" Margin="10" Padding="10" Click="AddToCart_Click"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
