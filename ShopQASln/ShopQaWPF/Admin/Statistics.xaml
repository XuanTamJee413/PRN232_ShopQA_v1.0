<Window x:Class="ShopQaWPF.Admin.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statistics" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid Background="#F8F9FA">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
            <TextBlock Text="Thống kê Shop" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="0,0,0,30" HorizontalAlignment="Center"/>
            <Border Background="#17A2B8" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Tổng số đơn hàng" FontSize="18" Foreground="White"/>
                    <TextBlock x:Name="txtTotalOrders" Text="..." FontSize="32" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </Border>
            <Border Background="#28A745" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Tổng doanh thu" FontSize="18" Foreground="White"/>
                    <TextBlock x:Name="txtTotalRevenue" Text="..." FontSize="32" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </Border>
            <Border Background="#FFC107" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="Sản phẩm bán chạy nhất" FontSize="18" Foreground="#333"/>
                    <ListView x:Name="lvBestSelling" Height="120" Margin="0,10,0,0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Tên sản phẩm" DisplayMemberBinding="{Binding ProductName}" Width="200"/>
                                <GridViewColumn Header="Size" DisplayMemberBinding="{Binding Size}" Width="80"/>
                                <GridViewColumn Header="Màu" DisplayMemberBinding="{Binding Color}" Width="80"/>
                                <GridViewColumn Header="Số lượng bán" DisplayMemberBinding="{Binding QuantitySold}" Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
