<Window x:Class="ShopQaWPF.Admin.AddVariantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Variant" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Size:" Margin="0,0,0,5"/>
            <TextBox x:Name="SizeTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Color:" Margin="0,0,0,5"/>
            <TextBox x:Name="ColorTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Price (VND):" Margin="0,0,0,5"/>
            <TextBox x:Name="PriceTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Inventory Quantity:" Margin="0,0,0,5"/>
            <TextBox x:Name="InventoryQuantityTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Image:" Margin="0,0,0,5"/>
            <Button Content="📁 Choose Image" Click="ChooseImage_Click" Margin="0,0,0,5"/>
            <TextBlock x:Name="ImagePathTextBlock" Text="No image selected" FontStyle="Italic" Margin="0,0,0,10"/>

            <Button Content="➕ Add Variant"
                    HorizontalAlignment="Center"
                    Padding="8,4"
                    Click="AddVariant_Click"/>
        </StackPanel>
    </Grid>
</Window>
