<Window x:Class="ShopQaWPF.Admin.UpdateProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Product"
        Height="600" Width="420"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" VerticalAlignment="Top">

            <TextBlock Text="Product Name" FontWeight="Bold" />
            <TextBox x:Name="NameTextBox" Width="350" Margin="0,5,0,10"/>

            <TextBlock Text="Description" FontWeight="Bold" />
            <TextBox x:Name="DescriptionTextBox" Width="350" Height="80"
                     AcceptsReturn="True" TextWrapping="Wrap" Margin="0,5,0,10"/>

            <TextBlock Text="Category" FontWeight="Bold" />
            <ComboBox x:Name="CategoryComboBox" Width="350" Margin="0,5,0,10"
                      DisplayMemberPath="Name" SelectedValuePath="Id"/>

            <TextBlock Text="Brand" FontWeight="Bold" />
            <ComboBox x:Name="BrandComboBox" Width="350" Margin="0,5,0,10"
                      DisplayMemberPath="Name" SelectedValuePath="Id"/>

            <TextBlock Text="Product Image" FontWeight="Bold" />
            <Image x:Name="ProductImage" Width="120" Height="120" Stretch="Uniform" Margin="0,5,0,10"/>
            <Button Content="Upload Image" Width="120" Click="UploadImageButton_Click" Margin="0,0,0,20"/>

            <Button Content="Save" Width="100" Height="35"
                    Background="#4CAF50" Foreground="White"
                    FontWeight="Bold" Click="Save_Click"
                    HorizontalAlignment="Center" />
        </StackPanel>
    </ScrollViewer>
</Window>
