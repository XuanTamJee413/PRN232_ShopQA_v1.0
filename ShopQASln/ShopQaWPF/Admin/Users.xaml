<Window x:Class="ShopQaWPF.Admin.Users"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:converters="clr-namespace:ShopQaWPF.Converters"
        mc:Ignorable="d"
        Title="Users" Height="600" Width="1000">

    <Window.Resources>
        <converters:StatusToBanVisibilityConverter x:Key="StatusToBanVisibilityConverter" />
        <converters:StatusToUnbanVisibilityConverter x:Key="StatusToUnbanVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="User List" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <!-- Search and Filter -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="SearchBox" Grid.Column="0" Height="38" FontSize="16" Margin="0,0,10,0" VerticalContentAlignment="Center" Padding="10" Background="#F5F5F5" BorderBrush="#BDBDBD" BorderThickness="1"/>
            <ComboBox x:Name="RoleFilter" Grid.Column="1" Height="38" FontSize="16" Margin="0,0,10,0" VerticalContentAlignment="Center" Background="#F5F5F5" BorderBrush="#BDBDBD" BorderThickness="1">
                <ComboBoxItem Content="All Roles" IsSelected="True"/>
                <ComboBoxItem Content="Customer"/>
                <ComboBoxItem Content="Staff"/>
                <ComboBoxItem Content="Admin"/>
            </ComboBox>
            <Button x:Name="SearchButton" Grid.Column="2" Content="🔍 Search" Height="38" FontSize="16" Background="#1976D2" Foreground="White" Margin="0,0,0,0" BorderThickness="0" Cursor="Hand" Click="SearchButton_Click"/>
            <Button Grid.Column="3" Content="+ Add New User" Height="38" FontSize="16"
        Background="#007BFF" Foreground="White"
        HorizontalAlignment="Right" Margin="10,0,0,0" BorderThickness="0"
        Cursor="Hand" Click="AddNewUserButton_Click"/>
        </Grid>

        <!-- User Table -->
        <DataGrid Grid.Row="2" x:Name="UserDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" Margin="0,20,0,20" FontSize="16" RowHeight="40" Background="#FAFAFA" BorderBrush="#BDBDBD" BorderThickness="1" GridLinesVisibility="All">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="150"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="220"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>

                <!-- Actions Column -->
                <DataGridTemplateColumn Header="Actions" Width="300">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- Edit Button -->
                                <Button Content="Edit" Click="EditButton_Click"
                                        Margin="2" Width="60"
                                        Background="#FFC107" Foreground="Black" Cursor="Hand"/>

                                <!-- Delete Button -->
                                <Button Content="Delete" Click="DeleteButton_Click"
                                        Margin="2" Width="70"
                                        Background="#F44336" Foreground="White" Cursor="Hand"/>

                                <!-- Ban Button -->
                                <Button Content="Ban" Click="BanButton_Click"
                                        Margin="2" Width="60"
                                        Background="#607D8B" Foreground="White" Cursor="Hand"
                                        Visibility="{Binding Status, Converter={StaticResource StatusToBanVisibilityConverter}}"/>

                                <!-- Unban Button -->
                                <Button Content="Unban" Click="UnbanButton_Click"
                                        Margin="2" Width="70"
                                        Background="#4CAF50" Foreground="White" Cursor="Hand"
                                        Visibility="{Binding Status, Converter={StaticResource StatusToUnbanVisibilityConverter}}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
