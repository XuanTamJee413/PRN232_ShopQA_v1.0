<Window x:Class="ShopQaWPF.Admin.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product" Height="550" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Name:"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Description:"/>
            <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Category:"/>
            <ComboBox x:Name="CategoryComboBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      Margin="0,0,0,10"/>

            <TextBlock Text="Brand:"/>
            <ComboBox x:Name="BrandComboBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      Margin="0,0,0,10"/>

            <TextBlock Text="Image:"/>
            <Button Content="Choose Image" Click="ChooseImage_Click" Margin="0,0,0,10"/>
            <TextBlock x:Name="ImagePathTextBlock" Text="No image selected" FontStyle="Italic" Margin="0,0,0,10"/>

            <Button Content="Create Product" Click="CreateProduct_Click"
                    Width="150" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
