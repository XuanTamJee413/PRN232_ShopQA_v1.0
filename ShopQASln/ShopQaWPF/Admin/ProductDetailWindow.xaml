<Window x:Class="ShopQaWPF.Admin.ProductDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Detail" Height="700" Width="1100">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20">
            <TextBlock Text="Product Detail" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="MainImage" Grid.Column="0" Width="250" Height="250" Stretch="UniformToFill" Margin="0,0,20,0"
                       HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <TextBlock x:Name="ProductName" FontSize="28" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="ProductDescription" TextWrapping="Wrap" Margin="0,0,0,10" FontStyle="Italic"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock FontWeight="Bold" Text="Category: "/>
                        <TextBlock x:Name="ProductCategory"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock FontWeight="Bold" Text="Brand: "/>
                        <TextBlock x:Name="ProductBrand"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="➕ Add Variant" Click="AddVariant_Click" Margin="0,0,10,0"/>
                <TextBox x:Name="SearchVariantTextBox" Width="200" Margin="0,0,10,0" ToolTip="Search by Size or Color"/>
                <TextBox x:Name="MinPriceTextBox" Width="100" Margin="0,0,5,0" ToolTip="Min Price (VND)" PreviewTextInput="NumberValidationTextBox"/>
                <TextBox x:Name="MaxPriceTextBox" Width="100" Margin="0,0,10,0" ToolTip="Max Price (VND)" PreviewTextInput="NumberValidationTextBox"/>
                <Button Content="Filter Variants" Click="FilterVariants_Click"/>
            </StackPanel>

            <TextBlock Text="Variants" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid x:Name="VariantDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="*"/>
                    <DataGridTextColumn Header="Color" Binding="{Binding Color}" Width="*"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat='N0\₫'}" Width="*"/>
                    <DataGridTextColumn Header="Inventory" Binding="{Binding Inventory.Quantity}" Width="*"/>
                    <DataGridTemplateColumn Header="Image" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImageUrl}" Width="60" Height="60" Stretch="UniformToFill"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Actions" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Edit" Margin="0,0,5,0" Click="EditVariant_Click" Tag="{Binding Id}"/>
                                    <Button Content="Delete" Click="DeleteVariant_Click" Tag="{Binding Id}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button Content="❮ Previous" x:Name="PrevPageBtn" Click="PrevPageBtn_Click" Margin="0,0,10,0"/>
                <TextBlock x:Name="PageNumberText" Text="Page 1" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button Content="Next ❯" x:Name="NextPageBtn" Click="NextPageBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
