<Window x:Class="ShopQaWPF.Admin.Product"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Management" Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" Width="200" Margin="0,0,10,0" ToolTip="Search by name"/>
            <ComboBox x:Name="CategoryComboBox" Width="200" Margin="0,0,10,0" DisplayMemberPath="Name" SelectedValuePath="Id"/>
            <Button Content="Search" Width="100" Click="Search_Click"/>
            <Button Content="Add Product" Width="120" Margin="10,0,0,0" Click="AddProduct_Click"/>
        </StackPanel>


        <DataGrid x:Name="ProductDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Image" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImageUrl}" Width="60" Height="60" Stretch="UniformToFill"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Name">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}"
                    Click="ProductName_Click"
                    Tag="{Binding Id}"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="Blue"
                    Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="250"/>
                <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="150"/>

                <DataGridTemplateColumn Header="Actions" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Update" Width="60" Margin="0,0,5,0" Tag="{Binding Id}" Click="Update_Click"/>
                                <Button Content="Delete" Width="60" Tag="{Binding Id}" Click="Delete_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>