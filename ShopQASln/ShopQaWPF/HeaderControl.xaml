<UserControl x:Class="ShopQaWPF.HeaderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="120" Width="1000">

    <Grid>
        <!-- Top bar -->
        <Border Background="Black" Height="30" VerticalAlignment="Top">
            <Grid>
                <!-- Left Text -->
                <TextBlock Text="Free shipping, 30-day return or refund guarantee."
                   Foreground="White" VerticalAlignment="Center" 
                   Margin="20,0,0,0" HorizontalAlignment="Left"/>

                <!-- Right Menu -->
                <Menu Background="Black" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                    <MenuItem Header="SETTINGS" Foreground="White" Background="Black">
                        
                        <MenuItem Header="Profile" Foreground="Blue" Click="ProfileMenuItem_Click"/>
                        <MenuItem Header="My Cart" Foreground="Blue"/>
                        <MenuItem Header="My Orders" Foreground="Blue"/>
                        <Separator/>
                        <MenuItem Header="Sign out" Foreground="Black"/>
                    </MenuItem>
                </Menu>
            </Grid>
        </Border>

        <!-- Main header -->
        <Grid Margin="0,30,0,0" Height="90">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <TextBlock Text="Male fashion." FontWeight="Bold" FontSize="28" VerticalAlignment="Center"
                       Margin="20,0,0,0" Grid.Column="0"/>

            <!-- Menu -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
                <Button Content="Home" Margin="10,0" FontWeight="Bold" Foreground="#D32F2F" BorderThickness="0" Background="Transparent"/>
                <Button Content="Shop" Margin="10,0" BorderThickness="0" Background="Transparent"/>
                <Button Content="Pages" Margin="10,0" BorderThickness="0" Background="Transparent"/>
                <Button Content="Blog" Margin="10,0" BorderThickness="0" Background="Transparent"/>
                <Button Content="Contacts" Margin="10,0" BorderThickness="0" Background="Transparent"/>
            </StackPanel>

            <!-- Icons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" Margin="0,0,20,0">
                <Button Content="♥" FontSize="18" BorderThickness="0" Background="Transparent" Margin="0,0,10,0"/>
                <Button Content="🛒 My Cart" FontWeight="Bold" BorderThickness="0" Background="Transparent"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
