<Window x:Class="ShopQaWPF.Staff.Categories"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopQaWPF.Staff"
        mc:Ignorable="d"
        Title="Quản lý Danh mục" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel nhập liệu và chức năng -->
        <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Padding="10" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Thông tin Danh mục" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                <TextBlock Text="Mã Danh mục:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtCategoryId" IsReadOnly="True" Margin="0,0,0,10" Padding="5" Background="#f0f0f0"/>

                <TextBlock Text="Tên Danh mục:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtCategoryName" Margin="0,0,0,20" Padding="5"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnAdd" Content="Thêm" Width="70" Margin="5" Padding="8,5" Click="btnAdd_Click"/>
                    <Button x:Name="btnUpdate" Content="Sửa" Width="70" Margin="5" Padding="8,5" Click="btnUpdate_Click"/>
                    <Button x:Name="btnDelete" Content="Xóa" Width="70" Margin="5" Padding="8,5" Click="btnDelete_Click"/>
                </StackPanel>


                <!-- Phần tìm kiếm -->
                <Separator Margin="0,20,0,15"/>
                <TextBlock Text="Search:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="txtSearch" Margin="0,0,0,10" Padding="5" TextChanged="txtSearch_TextChanged"/>
            </StackPanel>
            
            
        </Border>

        <!-- Lưới hiển thị dữ liệu -->
        <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Margin="15,0,0,0" CornerRadius="5">
            <DataGrid x:Name="dgCategories" AutoGenerateColumns="False" CanUserAddRows="False"
                      SelectionMode="Single" SelectionChanged="dgCategories_SelectionChanged"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã" Binding="{Binding Id}" Width="100"/>
                    <DataGridTextColumn Header="Tên Danh mục" Binding="{Binding Name}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>