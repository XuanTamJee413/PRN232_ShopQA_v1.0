<Window x:Class="ShopQaWPF.Customer.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopQaWPF.Customer"
        mc:Ignorable="d"
        Title="Profile" Height="450" Width="800">
    <Grid>
        <Grid Background="#F7FBFC">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="User Profile Page" FontSize="32" Foreground="#5F6DF7" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,20,0,20" Grid.Row="0"/>
            <Grid Grid.Row="1" Margin="40,0,40,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <!-- Left: Edit Info -->
                <Border Background="White" CornerRadius="16" Padding="30" Grid.Column="0" Margin="0,0,30,0" VerticalAlignment="Top">
                    <StackPanel>
                        <TextBlock Text="General Information" FontSize="18" Foreground="#2EC4B6" FontWeight="SemiBold" Margin="0,0,0,16"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Username" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBlock Text=":" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding User.Username}" Grid.Row="0" Grid.Column="2" Margin="0,4"/>
                            <TextBlock Text="Email" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBlock Text=":" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding User.Email}" Grid.Row="1" Grid.Column="2" Margin="0,4"/>
                            <TextBlock Text="Address" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBlock Text=":" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Address}" Grid.Row="2" Grid.Column="2" Margin="0,4"/>
                            <TextBlock Text="City" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBlock Text=":" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding City}" Grid.Row="3" Grid.Column="2" Margin="0,4"/>
                            <TextBlock Text="Country" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBlock Text=":" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Country}" Grid.Row="4" Grid.Column="2" Margin="0,4"/>
                        </Grid>
                        <Button Content="Save changes" Width="120" Height="32" Background="#2EC4B6" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,16,0,0" Click="SaveChanges_Click"/>
                    </StackPanel>
                </Border>
                <!-- Right: Change Password -->
                <Border Background="White" CornerRadius="16" Padding="30" Grid.Column="1" VerticalAlignment="Top">
                    <StackPanel>
                        <TextBlock Text="Change Password" FontSize="18" Foreground="#2EC4B6" FontWeight="SemiBold" Margin="0,0,0,16"/>
                        <TextBlock Text="Old Password"/>
                        <PasswordBox x:Name="OldPasswordBox" Margin="0,4,0,12"/>
                        <TextBlock Text="New Password"/>
                        <PasswordBox x:Name="NewPasswordBox" Margin="0,4,0,12"/>
                        <Button Content="Change Password" Width="140" Height="32" Background="#5F6DF7" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Right" Click="ChangePassword_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
