<Window x:Class="ShopQaWPF.Customer.Wishlist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopQaWPF.Customer"
        mc:Ignorable="d"
        Title="Wishlist" Height="650" Width="1000">
    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Danh sách yêu thích" FontSize="28" FontWeight="Bold" Foreground="#222" Margin="40,30,0,20" Grid.Row="0"/>
        <ListView x:Name="lvWishlist" Grid.Row="1" Margin="40,0,40,0" Height="280">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="PRODUCT" Width="250">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" >
                                    <Image Source="{Binding ImageUrl}" Width="40" Height="40" Stretch="UniformToFill" Cursor="Hand" MouseLeftButtonUp="ProductDetail_Click" Tag="{Binding}"/>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center" Foreground="#1A237E" Cursor="Hand" MouseLeftButtonUp="ProductDetail_Click" Tag="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="DESCRIPTION" Width="400" DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="ADDED AT" Width="120" DisplayMemberBinding="{Binding AddedAt}"/>
                    <GridViewColumn Header="" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Remove" Background="#E53935" Foreground="White" FontWeight="SemiBold" Width="80" Height="32" Click="Remove_Click" Tag="{Binding}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="CONTINUE SHOPPING" Grid.Row="2" Width="220" Height="50" FontWeight="Bold" FontSize="16" Background="White" BorderBrush="#222" BorderThickness="2" Foreground="#222" HorizontalAlignment="Left" Margin="40,30,0,30" Click="ContinueShopping_Click"/>
    </Grid>
</Window>
